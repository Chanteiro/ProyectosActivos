<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.cartelle.controlador.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usuariosControler</servlet-name>
        <servlet-class>com.cartelle.controlador.usuariosControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>areasControler</servlet-name>
        <servlet-class>com.cartelle.controlador.areasControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>puestosController</servlet-name>
        <servlet-class>com.cartelle.controlador.puestosController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>detallePuesto</servlet-name>
        <servlet-class>com.cartelle.controlador.detallePuesto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <resource-ref>
        <description>Conexi√≥n BD</description>
        <res-ref-name>jdbc/AccesoDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet-mapping>
        <servlet-name>usuariosControler</servlet-name>
        <url-pattern>/usuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>areasControler</servlet-name>
        <url-pattern>/areas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>puestosController</servlet-name>
        <url-pattern>/puestos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>detallePuesto</servlet-name>
        <url-pattern>/detallePuesto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
